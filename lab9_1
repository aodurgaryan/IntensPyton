def is_palindrome(n):
    # Преобразуем число в строку
    num_str = str(n)
    # Сравниваем строку с ее обратной версией
    return num_str == num_str[::-1]

# Запрашиваем ввод у пользователя
number = input("Введите натуральное число: ")

# Проверяем, является ли введенное число палиндромом
if number.isdigit() and int(number) > 0:  # Проверка, что это натуральное число
    if is_palindrome(number):
        print(f"{number} является палиндромом.")
    else:
        print(f"{number} не является палиндромом.")
else:
    print("Пожалуйста, введите корректное натуральное число.")
